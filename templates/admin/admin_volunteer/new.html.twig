{# templates/admin_volunteer/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouveau b√©n√©vole{% endblock %}

{% block body %}

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-2 fixed-top">
    <div class="container d-flex justify-content-between        <!-- Logo + titre -->
        <div class="d-flex align-items-center gap-3">
            <a href="{{ path('app_admin') }}">
                <img src="{{ asset('images/LOGO.PNG') }}" alt="Logo Yad Alev" class="nav-logo">
            </a>
            <span class="fw-bold text-primary fs-5">Ajouter un b√©n√©vole</span>
        </div>

        <div class="d-flex align-items-center gap-4">
            <a href="{{ path('app_admin_volunteer_index') }}" class="nav-icon" title="Retour liste">
                 <i class="fas fa-arrow-left"></i>
            </a>
            <a href="{{ path('app_logout') }}" class="nav-icon" title="Se d√©connecter">
                <i class="fas fa-sign-out-alt"></i>
            </a>
        </div>
    </div>
</nav>

<div class="main-container">
    <div class="content-wrapper container" style="padding-top: 100px;">

        <div class="text-center mb-5 fade-in">
            <h2 class="text-primary fw-bold">Cr√©er un nouveau b√©n√©vole</h2>
            <p class="text-muted" style="animation-delay:.2s">
                Renseignez les informations du b√©n√©vole puis enregistrez.
            </p>
        </div>

        <p class="text-muted mb-3">
            <span class="text-danger">*</span> Champs obligatoires
        </p>

        {{ form_start(form) }}

        {% if form_errors(form) %}
            <div class="alert alert-danger mt-3">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        <div class="info-card shadow-sm fade-in p-4">
            <h5 class="text-primary fw-semibold mb-3">Identit√©</h5>

            {{ form_row(form.name) }}
            {{ form_row(form.firstName) }}
            {{ form_row(form.phoneNumber) }}
            {{ form_row(form.email) }}

            {# --- Mot de passe (RepeatedType) rendu proprement + toggle --- #}
            {# --- Mot de passe 1 --- #}
            <div class="mb-3">
                {{ form_label(form.plainPassword.first, 'Mot de passe') }}
                <div class="input-group">
                    {# On enl√®ve l'ID manuel et on laisse Symfony g√©rer #}
                    {{ form_widget(form.plainPassword.first, {
                        attr: {
                            autocomplete: 'new-password'
                        }
                    }) }}
                    {# On r√©cup√®re l'ID r√©el g√©n√©r√© par Symfony avec vars.id #}
                    <button class="btn btn-outline-secondary toggle-password"
                            type="button"
                            data-target="{{ form.plainPassword.first.vars.id }}"
                            title="Afficher/Masquer">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                {{ form_errors(form.plainPassword.first) }}
            </div>

            {# --- Mot de passe 2 (Confirmation) --- #}
            <div class="mb-3">
                {{ form_label(form.plainPassword.second, 'Confirmez le mot de passe') }}
                <div class="input-group">
                    {{ form_widget(form.plainPassword.second, {
                        attr: {
                            autocomplete: 'new-password'
                        }
                    }) }}
                    <button class="btn btn-outline-secondary toggle-password"
                            type="button"
                            data-target="{{ form.plainPassword.second.vars.id }}"
                            title="Afficher/Masquer">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                {{ form_errors(form.plainPassword.second) }}
            </div>
        </div>

        <div class="text-center mt-4 fade-in">
            <button type="submit" class="btn btn-primary btn-lg shadow-sm edit-btn">
                üíæ Cr√©er le b√©n√©vole
            </button>
        </div>

        {{ form_row(form._token) }}
        {{ form_end(form, { render_rest: false }) }}

        <div class="text-center mt-4 fade-in">
            <a href="{{ path('app_admin_volunteer_index') }}" class="btn btn-outline-secondary btn-lg shadow-sm">
                ‚Üê Retour √† la liste des b√©n√©voles
            </a>
        </div>
    </div>
</div>

<style>
label.required::after {
    content: " *";
    color: red;
    font-weight: bold;
}

.navbar { border-bottom: 1px solid #e2e8f0; }
.nav-logo { width: 48px; }
.nav-icon { font-size: 1.4rem; color:#444; transition:.2s; }
.nav-icon:hover { color:#0d6efd; transform: translateY(-2px); }

.main-container { min-height: 100vh; display:flex; flex-direction:column; }

.info-card {
    background:#fff;
    border-radius:1rem;
    border:1px solid #e2e8f0;
}

.edit-btn {
    border-radius:10px;
    padding:10px 25px;
}

.fade-in {
    opacity:0;
    animation:fadeSlide .7s ease forwards;
}

@keyframes fadeSlide {
    from { opacity:0; transform:translateY(25px); }
    to   { opacity:1; transform:translateY(0); }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.toggle-password').forEach(btn => {
        btn.addEventListener('click', () => {
            const targetId = btn.getAttribute('data-target');
            const input = document.getElementById(targetId);
            const icon = btn.querySelector('i');

            if (!input) return;

            const isPassword = input.type === 'password';
            input.type = isPassword ? 'text' : 'password';

            icon.classList.toggle('fa-eye');
            icon.classList.toggle('fa-eye-slash');
        });
    });
});
</script>

{% endblock %}
