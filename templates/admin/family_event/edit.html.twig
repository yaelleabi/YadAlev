			<div class="info-card shadow-sm fade-in p-4" style="max-width: 800px; margin: 0 auto;">

				<div class="mb-3">
					{{ form_row(form.Title) }}
				</div>

				<div class="mb-3">
					{{ form_row(form.Description) }}
				</div>

				<div class="row mb-3">
