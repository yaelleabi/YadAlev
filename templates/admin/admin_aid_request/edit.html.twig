    <!-- FORMULAIRE -->
    <div class="info-card shadow-sm fade-in p-4">

        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'adminEditForm'}}) }}

        {% if form_errors(form) %}
            <div class="alert alert-danger mt-3 fade-in">
                <i class="fas fa-exclamation-circle me-2"></i>
                Des erreurs sont prÃ©sentes dans le formulaire.
                {{ form_errors(form) }}
