{% extends 'base.html.twig' %}

{% block title %}Couleur des titres - Paramètres
{% endblock %}

{% block body %}
	{% include 'admin/settings/_navbar.html.twig' %}

	<div class="main-container">
		<div class="content-wrapper d-flex flex-column justify-content-start align-items-center pt-5">

			<div class="container mt-5" style="max-width: 600px;">
				<h3 class="fw-bold mb-4 text-center">Personnaliser les couleurs</h3>

				<div class="card shadow-sm border-0 p-4">
					<form method="post">
						<div class="mb-4">
							<label for="colorInput" class="form-label fw-bold">Couleur des titres principaux</label>
							<p class="text-muted small">Ceci changera la couleur de tous les titres bleus du site (Espace Famille, Admin, Accueil).</p>
							<div class="d-flex align-items-center gap-3">
								<input type="color" class="form-control form-control-color" id="colorInput" name="title_color" value="{{ current_color }}" title="Choisir une couleur">
								<input type="text" class="form-control" id="hexInput" value="{{ current_color }}" placeholder="#000000" style="width: 120px; text-transform: uppercase;">
							</div>
							<script>
								const colorInput = document.getElementById('colorInput');
const hexInput = document.getElementById('hexInput');

colorInput.addEventListener('input', () => {
hexInput.value = colorInput.value.toUpperCase();
});

hexInput.addEventListener('input', () => {
const val = hexInput.value;
if (val.match(/^#[0-9A-F]{6}$/i)) {
colorInput.value = val;
}
});
							</script>
						</div>

						<div class="d-flex justify-content-between">
							<a href="{{ path('app_admin_settings_index') }}" class="btn btn-outline-secondary">Annuler</a>
							<div>
								<button type="submit" name="reset" value="1" class="btn btn-outline-danger me-2">Réinitialiser</button>
								<button type="submit" class="btn btn-primary">Enregistrer</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
