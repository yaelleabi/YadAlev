{% extends 'base.html.twig' %}

{% block title %}Family{% endblock %}

{% block body %}
    <h1>Family</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ family.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ family.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ family.password }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ family.name }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ family.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ family.roles ? family.roles|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_family_index') }}">back to list</a>

    <a href="{{ path('app_family_edit', {'id': family.id}) }}">edit</a>

    {{ include('family/_delete_form.html.twig') }}
