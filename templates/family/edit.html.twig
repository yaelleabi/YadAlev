</div>

<style>
/* Votre CSS existant (pas de changement n√©cessaire) */
.navbar { border-bottom: 1px solid #e2e8f0; }
.nav-logo { width: 48px; }
.nav-icon { font-size: 1.4rem; color:#444; transition:.2s; }
.nav-icon:hover { color:#0d6efd; transform: translateY(-2px); }
.bg-page { background: linear-gradient(135deg, #f8f9fc, #eef2f7); }
.main-container { min-height: 100vh; padding-top: 110px; display: flex; flex-direction: column; }
.info-card { background: #fff; border-radius: 1rem; border: 1px solid #e2e8f0; }
.accordion-button { font-weight: 600; color: #0d6efd; }
.accordion-button:not(.collapsed) { background: #e8f0ff; color: #0d6efd; }
.edit-btn { border-radius: 10px; padding: 10px 25px; }
.fade-in { opacity:0; animation: fadeSlide .7s ease forwards; }
@keyframes fadeSlide { from { opacity:0; transform: translateY(25px); } to { opacity:1; transform:translateY(0); } }
.footer-line { width: 85%; height: 1px; background:#d0d7e0; }
.footer-logo { width: 60px; }

/* Petit ajout pour mettre en rouge l'onglet qui contient une erreur */
.accordion-button.has-error {
    color: #dc3545 !important;
    background-color: #ffe6e6 !important;
    border-color: #dc3545;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
    // On cherche tous les √©l√©ments qui ont la classe d'erreur Bootstrap ou Symfony standard
    // .is-invalid est ajout√© automatiquement par Symfony si form_theme 'bootstrap_5' est actif
    const errors = document.querySelectorAll('.is-invalid, .invalid-feedback, .text-danger ul li');

    if (errors.length > 0) {
        // Si on trouve des erreurs, on boucle dessus
        errors.forEach(function(error) {
            // On remonte au parent "accordion-collapse"
            const collapseDiv = error.closest('.accordion-collapse');
            
            if (collapseDiv) {
                // 1. On ouvre l'onglet
                collapseDiv.classList.add('show');
                
                // 2. On cherche le bouton qui contr√¥le cet onglet pour le colorer en rouge
                const divId = collapseDiv.id;
                const btn = document.querySelector(`button[data-bs-target="#${divId}"]`);
                if (btn) {
                    btn.classList.remove('collapsed');
                    btn.classList.add('has-error'); // Ajoute la classe CSS d√©finie plus haut
                }
            }
        });

        // Petit scroll vers la premi√®re erreur pour l'utilisateur
        const firstError = document.querySelector('.alert-danger, .is-invalid');
        if(firstError){
            firstError.scrollIntoView({behavior: 'smooth', block: 'center'});
        }
    }
});
</script>

{% endblock %}