    <style>
        /* Fixe la navbar (√©vite le d√©calage) */
        body {
            padding-top: 80px;
            background-color: #ffffff !important;
        }

        @media (max-width: 576px) {
            body {
                padding-top: 70px;
            }
            .container {
                max-width: 100% !important;
                padding-left: 15px;
                padding-right: 15px;
            }
        }

        .navbar {
            min-height: 68px;
        }
        @media (max-width: 576px) {
            .navbar {
                min-height: 60px;
            }
        }

        .nav-logo {
            width: 48px;
            height: 48px;
            object-fit: contain;
        }
        @media (max-width: 576px) {
            .nav-logo {
                width: 38px;
                height: 38px;
            }
        }
    </style>


    </head>

    <body>

        {% block body %}{% endblock %}

